<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}Welcome!
            {% endblock %}
        </title>
        <link href="/css/main.css" rel="stylesheet"> {% block stylesheets %}{% endblock %}
    </head>
    <body>
            <a href={{ path("app_home") }}>Home</a>
        {% if app.user %}
            <a href={{ path("menu_item_index") }}>Menu Item</a>
            <a href={{ path("menu_section_index") }}>Menu Section</a>
            <a href={{ path('app_logout') }}>Logout</a>
        {% else %}
            <a href={{ path('app_login') }}>Login</a>
            <a href={{ path('app_register') }}>Register</a>
        {% endif %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
