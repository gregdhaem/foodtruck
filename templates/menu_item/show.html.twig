{% extends 'base.html.twig' %}

{% block title %}MenuItem{% endblock %}

{% block body %}
    <h1>MenuItem</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ menu_item.id }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ menu_item.user.email }}</td>
            </tr>
            <tr>
                <th>Item Section</th>
                <td>{{ menu_item.menuSection.sectionTitle }}</td>
            </tr>
            <tr>
                <th>Item Description</th>
                <td>{{ menu_item.itemDescription }}</td>
            </tr>
            <tr>
                <th>Item Price</th>
                <td>{{ menu_item.itemPrice }}</td>
            </tr>
            <tr>
                <th>Item Image</th>
                <td>{{ menu_item.itemImage ? menu_item.itemImage : 'No image' }}</td>
            </tr>
            <tr>
                <th>On Menu</th>
                <td>{{ menu_item.onMenu ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('menu_item_index') }}">back to list</a>

    <a href="{{ path('menu_item_edit', {'id': menu_item.id}) }}">edit</a>

    {{ include('menu_item/_delete_form.html.twig') }}
{% endblock %}
